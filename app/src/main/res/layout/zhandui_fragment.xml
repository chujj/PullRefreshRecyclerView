<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/user_header_bg_resource">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            tools:text="大幂幂"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal"
        android:background="#FF444444"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="今日佣金"
                android:textColor="#FFCCCCCC"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/jin_ri_yong_jin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.6dp"
                android:text="12000.00"
                android:textColor="#FFCCCCCC"
                android:textSize="18sp"
                />

        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical"
            android:background="#1f1f1f"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#FF444444"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="累计佣金"
                android:textColor="#FFCCCCCC"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/lei_ji_yong_jin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.6dp"
                android:text="0.00"
                android:textColor="#FFCCCCCC"
                android:textSize="18sp"
                />

        </LinearLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="#FF444444"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="亲兵队"
                android:textColor="#FFCCCCCC"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/qin_bin_dui_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.6dp"
                android:text="0.00"
                android:textColor="#FFCCCCCC"
                android:textSize="18sp"
                />

        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical"
            android:background="#1f1f1f"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#FF444444"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="护卫队"
                android:textColor="#FFCCCCCC"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/hu_wei_dui_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.6dp"
                android:text="0.00"
                android:textColor="#FFCCCCCC"
                android:textSize="18sp"
                />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FF444444"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="战队"
            android:textColor="#FF999999"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日交易"
            android:textColor="#FF999999"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="累计交易"
            android:textColor="#FF999999"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日佣金"
            android:textColor="#FF999999"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="累计佣金"
            android:textColor="#FF999999"
            android:textSize="12sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FF444444"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="亲兵队"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/q1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/q2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/q3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/q4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FF444444"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="护卫队"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/h1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/h3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/h4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />


    </LinearLayout>

</LinearLayout>