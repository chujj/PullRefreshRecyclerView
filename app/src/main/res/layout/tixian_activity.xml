<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="#f2f2f2">

    <include layout="@layout/topbar_layout"/>

    <include layout="@layout/dangdang_divider_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/trade_home_user_header"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:background="#fff">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现金额"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />


                <EditText
                    android:id="@+id/tixian_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:background="@null"
                    android:inputType="number"
                    android:textColor="#000"
                    android:hint="请输入提现金额"
                    android:textColorHint="#FF999999"
                    android:textSize="16sp"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="手续费2元/笔，可提现时间：每周一至周五9:00－16:00"
                android:textColor="#FF999999"
                android:textSize="12sp"
                />

            <LinearLayout
                android:id="@+id/banks_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>



            <!-- 输入框 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:editable="false"
                        android:background="@null"
                        android:textColor="#000"
                        android:hint="银行名称"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/banks_select_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="省份"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/privince_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:editable="false"
                        android:textColor="#000"
                        android:hint="选择开卡省份"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/province_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="城市"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/city_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:editable="false"
                        android:textColor="#000"
                        android:hint="选择开卡城市"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡号"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/card_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:focusable="true"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="#000"
                        android:hint="请输入卡号"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="持卡人"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/card_owner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:focusable="true"
                        android:background="@null"
                        android:textColor="#000"
                        android:hint="请输入开户人"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:background="#fff">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />


                    <EditText
                        android:id="@+id/card_owner_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:focusable="true"
                        android:background="@null"
                        android:textColor="#000"
                        android:hint="请输入身份证号"
                        android:textColorHint="#FF999999"
                        android:textSize="16sp"
                        />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mobile_promt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                tools:text="已验证手机  186****0141"
                android:textColor="#FF999999"
                android:textSize="16sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:background="#fff">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />


                <EditText
                    android:id="@+id/sms_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:background="@null"
                    android:inputType="number"
                    android:textColor="#000"
                    android:hint="请输入验证码"
                    android:textColorHint="#FF999999"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/require_sms_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="#2093ec"
                    android:textSize="16sp"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="53.5dp"
                android:layout_height="38.5dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="提 现"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/round_btn_bg"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>