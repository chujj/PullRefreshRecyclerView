<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <!-- group1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今开：8410.16"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/high_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高：8422.49"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/low_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低：8369.72"
            android:textColor="#FFCCCCCC"
            android:textSize="12sp"
            />

    </LinearLayout>



    <!-- group2 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/time_180"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/trade_fragment_timeinterval_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算时间"
                android:textColor="#FFCCCCCC"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="180秒"
                android:textColor="#FFEBAD33"
                android:textSize="20sp"
                />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:id="@+id/time_60"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/trade_fragment_timeinterval_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算时间"
                android:textColor="#FFCCCCCC"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="60秒"
                android:textColor="#FFEBAD33"
                android:textSize="20sp"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:id="@+id/time_300"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/trade_fragment_timeinterval_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算时间"
                android:textColor="#FFCCCCCC"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="300秒"
                android:textColor="#FFEBAD33"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>


    <!-- group3 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buy_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/trade_fragment_buy_up_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买涨"
                android:textColor="#FFF35833"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                android:background="#FFF35833"/>

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            />

        <LinearLayout
            android:id="@+id/buy_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/trade_fragment_buy_down_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买跌"
                android:textColor="#FF2CB545"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:visibility="gone"
                android:layout_marginLeft="4dp"
                android:background="#FF2CB545"/>

        </LinearLayout>

    </LinearLayout>



    <!-- group 4 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/line_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="今日走势"
                android:layout_gravity="center"
                android:textColor="#FFEBAD33"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"/>


        </FrameLayout>


        <FrameLayout
            android:id="@+id/line_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/line_detail_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="1小时K线"
                android:layout_gravity="center"
                android:textColor="#FFCCCCCC"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"
                android:visibility="invisible"/>


        </FrameLayout>
        <FrameLayout
            android:id="@+id/line_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/line_detail_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="2小时K线"
                android:layout_gravity="center"
                android:textColor="#FFCCCCCC"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"
                android:visibility="invisible"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/line_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/line_detail_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="6小时K线"
                android:layout_gravity="center"
                android:textColor="#FFCCCCCC"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"
                android:visibility="invisible"/>


        </FrameLayout>

    </LinearLayout>

    <!-- group lines -->

    <FrameLayout
        android:id="@+id/kline_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </FrameLayout>


    <!-- group trades -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/trade_list1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/trade_list1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="最新成交"
                android:layout_gravity="center"
                android:textColor="#FFEBAD33"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"/>


        </FrameLayout>


        <FrameLayout
            android:id="@+id/trade_list2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/trade_list2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="持仓订单"
                android:layout_gravity="center"
                android:textColor="#FFCCCCCC"
                android:textSize="12sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFEBAD33"
                android:layout_gravity="bottom"
                android:visibility="invisible"/>


        </FrameLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="持仓订单"
        android:textColor="#FFCCCCCC"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF3C3C3C"/>



    <LinearLayout
        android:id="@+id/trades_mine_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:orientation="vertical">

        <include layout="@layout/trade_trades_header_layout"/>

        <LinearLayout
            android:id="@+id/trades_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/trades_current_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:orientation="vertical">


        <include layout="@layout/trade_all_trades_header_layout"/>

        <LinearLayout
            android:id="@+id/trades_all_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>




</LinearLayout>