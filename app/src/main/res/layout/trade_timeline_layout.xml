<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.wordplat.ikvstockchart.InteractiveKLineView
        android:id="@+id/timeLineView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:xLabelColor="#FFCCCCCC"
        app:yLabelColor="#FFCCCCCC"
        app:timeLineColor="#98989a"
        app:timeLineMaxCount="35"
        app:timeLineSize="1dp"
        app:xLabelSize="8sp"
        app:neutralColor="#FFCCCCCC"
        app:decreasingColor="#FFCCCCCC"
        app:increasingColor="#FFCCCCCC"
        app:yLabelSize="8sp"
        app:gridColor="#6C6C6c"
        />

</LinearLayout>