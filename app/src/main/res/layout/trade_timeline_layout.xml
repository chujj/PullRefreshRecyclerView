<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.wordplat.ikvstockchart.InteractiveKLineView
        android:id="@+id/timeLineView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:xLabelColor="#000"
        app:yLabelColor="#000"
        app:timeLineColor="#81bceb"
        app:timeLineMaxCount="35"
        app:timeLineSize="1dp"
        app:xLabelSize="8sp"
        app:neutralColor="#000"
        app:decreasingColor="#000"
        app:increasingColor="#000"
        app:yLabelSize="8sp"
        app:gridColor="#6C6C6c"
        app:highlightColor="#FFCCCCCC"
        app:markerBorderColor="#FFCCCCCC"
        app:markerTextColor="#FFCCCCCC"
        />

</LinearLayout>